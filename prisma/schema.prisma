generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

model Product {
  id                   Int      @id @default(autoincrement())
  title                String
  slug                 String   @unique
  description          String
  category             String
  price                Float
  discountPercentage   Float    @default(0)
  rating               Float    @default(0)
  stock                Int      @default(0)
  tags                 String[]
  brand                String
  sku                  String   @unique
  weight               Float
  dimensionWidth       Float
  dimensionHeight      Float
  dimensionDepth       Float
  warrantyInformation  String
  shippingInformation  String
  availabilityStatus   String
  returnPolicy         String
  minimumOrderQuantity Int      @default(1)
  metaCreatedAt        String
  metaUpdatedAt        String
  metaBarcode          String
  metaQrCode           String
  images               String[]
  thumbnail            String
  badge                String?
  features             String[]

  // SEO fields (Phase 4)
  metaTitle       String?
  metaDescription String?
  keywords        String[]

  // Vector embedding (Phase 2)
  embedding Unsupported("vector(1536)")?

  reviews         Review[]
  articleProducts  ArticleProduct[]
  wishlistItems   WishlistItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Review {
  id          String   @id @default(cuid())
  productId   Int
  productSlug String
  userName    String
  rating      Int
  date        String
  comment     String
  verified    Boolean  @default(false)

  userId  String?
  user    User?    @relation(fields: [userId], references: [id])
  product Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
}

model Article {
  id                 String   @id
  title              String
  subtitle           String
  excerpt            String
  author             String
  authorBio          String
  authorImage        String
  publishedAt        String
  readTime           String
  category           String
  heroImage          String
  tags               String[]
  featured           Boolean  @default(false)
  contentSections    Json
  relatedProductSlugs String[]

  // SEO fields (Phase 4)
  summary         String?
  metaTitle       String?
  metaDescription String?
  keywords        String[]

  // Vector embedding (Phase 2)
  embedding Unsupported("vector(1536)")?

  articleProducts  ArticleProduct[]
  readingListItems ReadingListItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ArticleProduct {
  id        String  @id @default(cuid())
  articleId String
  productId Int

  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([articleId, productId])
}

model LiveContent {
  id           Int      @id @default(autoincrement())
  type         String   @default("video")
  videoUrl     String
  title        String
  author       String
  authorAvatar String
  likes        Int      @default(0)
  comments     Int      @default(0)
  tags         String[]
  productLink  String
  description  String

  createdAt DateTime @default(now())
}

// Auth models (Phase 3 - defined now for schema completeness)
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?

  accounts      Account[]
  sessions      Session[]
  reviews       Review[]
  wishlistItems WishlistItem[]
  readingListItems ReadingListItem[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WishlistItem {
  id        String @id @default(cuid())
  userId    String
  productId Int

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, productId])
}

model ReadingListItem {
  id        String @id @default(cuid())
  userId    String
  articleId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([userId, articleId])
}
